<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="drawableSize" format="dimension" />
    <attr name="drawableLeftWidth" format="dimension" />
    <attr name="drawableLeftHeight" format="dimension" />
    <attr name="drawableTopWidth" format="dimension" />
    <attr name="drawableTopHeight" format="dimension" />
    <attr name="drawableRightWidth" format="dimension" />
    <attr name="drawableRightHeight" format="dimension" />
    <attr name="drawableBottomWidth" format="dimension" />
    <attr name="drawableBottomHeight" format="dimension" />
    <attr name="drawableLeft" format="reference" />
    <attr name="drawableTop" format="reference" />
    <attr name="drawableRight" format="reference" />
    <attr name="drawableBottom" format="reference" />
    <attr name="drawableCenter" format="boolean" />

    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />

    <!--DrawableEditText-->
    <declare-styleable name="DrawableTextView">
        <attr name="drawableSize" />
        <attr name="drawableLeftWidth" />
        <attr name="drawableLeftHeight" />
        <attr name="drawableTopWidth" />
        <attr name="drawableTopHeight" />
        <attr name="drawableRightWidth" />
        <attr name="drawableRightHeight" />
        <attr name="drawableBottomWidth" />
        <attr name="drawableBottomHeight" />
        <attr name="drawableLeft" />
        <attr name="drawableTop" />
        <attr name="drawableRight" />
        <attr name="drawableBottom" />
    </declare-styleable>

    <!--TextBanner-->
    <declare-styleable name="TextBanner">
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="textGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
            <enum name="start" value="3" />
            <enum name="end" value="4" />
            <enum name="center_horizontal" value="5" />
            <enum name="center_vertical" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RockerView">
        <attr name="rockerBackground" format="reference" />
        <attr name="rockerScr" format="reference" />
        <attr name="rockerArrow" format="reference" />
        <attr name="rockerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomRadiusImageView">
        <attr name="radius" format="dimension" />
        <attr name="leftTopRadius" format="dimension" />
        <attr name="leftBottomRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
    </declare-styleable>
</resources>