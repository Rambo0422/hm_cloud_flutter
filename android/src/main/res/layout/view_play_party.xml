<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:tag="layout/view_play_party_0">

<!--    <View-->
<!--        android:layout_width="330dp"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="#242C39" />-->

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:background="#1C222D"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_room_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="7dp"
            android:text="房间ID: 33344566"
            android:textColor="#8995A9"
            android:textSize="11sp" />

        <com.sayx.hm_cloud.widget.PlayPartyGameViewItem
            android:id="@+id/play_party_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.sayx.hm_cloud.widget.PlayPartyGameViewItem
            android:id="@+id/play_party_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.sayx.hm_cloud.widget.PlayPartyGameViewItem
            android:id="@+id/play_party_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.sayx.hm_cloud.widget.PlayPartyGameViewItem
            android:id="@+id/play_party_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bl_corners_radius="4dp"
                app:bl_solid_color="#242B37">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_party_sound" />

            </FrameLayout>

            <androidx.legacy.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bl_corners_radius="4dp"
                app:bl_solid_color="#242B37">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_party_microphone" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_close_play_party"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_close_play_party"
            android:layout_width="20.5dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_play_party_close" />

    </FrameLayout>
</LinearLayout>
